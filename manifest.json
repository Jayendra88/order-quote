{
  "vendor": "sandboxusdev",
  "name": "orderquote",
  "version": "1.0.0",
  "title": "Order Quote",
  "description": "B2B functionality that ables you to save items from the cart with their current prices to order it later",
  "builders": {
    "graphql": "1.x",
    "react": "3.x",
    "store": "0.x",
    "node": "4.x",
    "messages": "1.x",
    "docs": "0.x"
  },
  "dependencies": {
    "vtex.checkout": "0.x",
    "vtex.store": "2.x",
    "vtex.styleguide": "9.x",
    "vtex.render-runtime": "7.x",
    "vtex.checkout-resources": "0.x",
    "vtex.order-manager": "0.x",
    "vtex.order-items": "0.x",
    "vtex.checkout-graphql": "0.x",
    "vtex.store-resources": "0.x",
    "vtex.css-handles": "0.x",
    "vtex.format-currency": "0.x"
  },
  "registries": [
    "smartcheckout"
  ],
  "policies": [
    {
      "name": "read-workspace-apps"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "update-app-settings"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/dataentities/cart/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "vtexid.vtex.com.br",
        "path": "/api/vtexid/pub/authenticated/*"
      }
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "POWER_USER_DS"
    }
  ],
  "settingsSchema": {
    "title": "Order Quote",
    "type": "object",
    "properties": {
      "hasSchema": {
        "type": "boolean",
        "default": false
      },
      "adminSetup": {
        "title": "Order Quote Settings",
        "type": "object",
        "properties": {
          "cartName": {
            "title": "Order Quote Button Name",
            "type": "string"
          },
          "cartLifeSpan": {
            "title": "Lifespan (in days) of saved cart",
            "type": "number",
            "minimum": 1
          },
          "storeLogoUrl": {
            "title": "Store logo URL",
            "type": "string"
          }
        },
        "required": [
          "cartName",
          "cartLifeSpan",
          "storeLogoUrl"
        ]
      }
    },
    "required": [
      "adminSetup"
    ]
  },
  "settingsUiSchema": {
    "ui:order": [
      "adminSetup",
      "hasSchema"
    ],
    "adminSetup": {
      "ui:order": [
        "cartName",
        "cartLifeSpan",
        "storeLogoUrl"
      ]
    },
    "hasSchema": {
      "ui:widget": "hidden"
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
